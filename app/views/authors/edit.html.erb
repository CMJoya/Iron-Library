<div class="page-header">
  <h1>Edit Author</h1>
</div>
<%= form_for @author, url: author_path(id: @author.id) do |f| %>
<%= f.label :first_name %>
<%= f.text_area :first_name, class: "form-control" %>
<%= f.label :last_name %>
<%= f.text_area :last_name, class: "form-control" %>
<%= f.label :bio %>
<%= f.text_area :bio, class: "form-control" %>

<%= f.submit class: "btn btn-primary"%>
  <% end %>
