<h1><%= @book.title %> <small><%= @book.author.first_name %> <%= @book.author.last_name %></small></h1>

<div>
  <%= image_tag @book.photo_url %>
</div>
<%= link_to "Edit", edit_book_path(id: @book.id), class: "btn btn-default" %>
<%= link_to "Delete", book_path(id: @book.id), method: :delete, class: "btn-danger", data: {confirm: "Are You Sure?"} %>
