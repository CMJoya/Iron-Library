<div class="page-header">
  <h1><%= @book.title %> <small>
    <%= @book.author.first_name %>
    <%= @book.author.last_name %>
    $<%= @book.price %></small></h1>
</div>
<%= link_to "Edit", edit_book_path(id: @book.id), class: "btn btn-warning" %>
<%= link_to "Add to Cart", add_to_cart_path(book_id: @book.id), class: "btn btn-success", method: :post %>
<%= link_to "Delete", book_path(id: @book.id), method: :delete, class: "btn btn-danger", data: {confirm: "Are You Sure?"} %>

<div>
  <%= image_tag @book.photo_url %>
</div>
