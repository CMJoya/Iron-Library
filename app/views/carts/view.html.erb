<div class="page-header">
  <h1>Your Shopping Cart</h1>
</div>

<ul>
  <li><strong>Total Price</strong>
  <%= @order.total_price %>
  </li>
</ul>

<h3>Items</h3>
<table>
  <thead>
    <tr>
      <th>
        Item
      </th>
      <th>
        Quantity
      </th>
      <th>
        Per Item Price
      </th>
      <th>
        Total Price
      </th>
      <th>
        Remove
      </th>
    </tr>
  </thead>

  <tbody>
    <% @order.orderitems.each do |orderitem| %>
    <tr>
      <td>
        <%= orderitem.book.title %>
      </td>
      <td>
        <% orderitem.quantity %>
      </td>
      <td>
         <% orderitem.price %>
      </td>
      <td>
        <%= number_to_currency orderitem.total_price %>
      </td>
      <td>
        <%= link_to 'Remove Item', remove_from_cart_path(book_id: orderitem.book_id), method: :delete %>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>

<%= link_to 'Proceed To Checkout', checkout_path, class: 'btn' %>
